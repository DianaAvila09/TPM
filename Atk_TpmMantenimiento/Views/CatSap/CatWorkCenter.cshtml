@model List<Entidades.WorkCenter>

<div class="row">
    <div class="container-fluid">
        <div class="media" style="margin:10px">
            <div class="media-left ui-button-text-icon-primary">
                <label class="btn-sm titu">Catálogo de Work Center en Sap, planta: @ViewBag.TitleCA</label>
            </div>

            <div class="media-left">
                @Html.ActionLink("Actualizar", "CatWorkCenter", "CatSap", new { @class = "btn btn-md btn-success  glyphicon glyphicon-refresh", onclick = "return mostrar_procesarl(); "  })
            </div>
            <div class="media-left">
                <label class="form-control">Fecha de actualizacion: @Model[0].FechaUpdate </label>
            </div>
        </div>
    </div>

    <div class="container-fluid">
      

        <table id="sort" class="display compact cell-border" style="width:100%; font-size:12px">
            <thead>
                <tr>
                    <th scope="col">Id Sap</th>
                    <th scope="col">Work Center</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Planeador</th>
                    <th scope="col">Focus Factory</th>
                    <th scope="col">Inicio de Vigencia</th>
                    <th scope="col">Actualizado</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var dr in Model)
                {
                <tr>
                    <td style="font-weight:500; font-size:10pt">@dr.IdWorkCenter</td>
                    <td style="font-weight:500; font-size:10pt">@dr.CodWorkCenter </td>
                    <td style="font-weight:500; font-size:10pt">@dr.Descripcion </td>
                    <td>@dr.Administrador</td>
                    <td>@dr.FocusFactory</td>
                    <td>@dr.InicioVigencia.Date.ToShortDateString()</td>
                    <td>@dr.FechaUpdate</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var table = $('#sort').DataTable({
                "scrollY": "450px",
                "scrollCollapse": true,
                "paging": false,
                "responsive ": true,
                "select": true,
                "fixedHeader": true,
                "order": [[1, 'asc']]

            });
        });
    </script>
}
