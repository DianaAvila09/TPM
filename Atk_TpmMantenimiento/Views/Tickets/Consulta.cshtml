                </div>
            </div>

            <div class="form-group col-sm-2">
                @Html.Label("Fecha promesa:")
                <div class="form-control">
                    @Html.DisplayFor(model => model.FchaPromesa)

                </div>
            </div>

            <div class="form-group col-sm-2">
