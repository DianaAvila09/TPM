@model Entidades.SistemaManto
@{
    ViewBag.Title = "Create";
}
<br />
<h2 class="text-capitalize">Agregar un Sistema de mantenimiento de equipo</h2>

<form asp-controller="CatSistemas" method="post" action="Create">

    @Html.AntiForgeryToken()
    <br />
    <div class="form-horizontal">

        <div class="form-group">
            @Html.Label("Código del sistema:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CodSistema, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CodSistema, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.Label("Descripción del sistema:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Sistema, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Sistema, " ", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Departamento: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CodDepartamento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CodDepartamento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            @Html.Label("Activo:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox text-left">
                    @Html.EditorFor(model => model.Estatus, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Estatus, "", new { @class = "text-danger" })

                </div>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary"  />
            </div>
        </div>
        <br />
    </div>

</form>

<div>
    @Html.ActionLink("Back to List", "CatSistManto")
</div>
