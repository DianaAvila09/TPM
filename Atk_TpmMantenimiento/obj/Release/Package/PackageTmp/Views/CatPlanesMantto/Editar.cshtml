@model Entidades.AltaPlanManto

@Scripts.Render("~/bundles/jqueryval")

<div class="container-fluid bg-primary">
    <div class="modal-header light-blue darken-3 white-text">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true" class="white-text"><i class="glyphicon glyphicon-remove white-text"></i></span>
        </button>
        <h4 class="title " id="myModalLabel"><i class="glyphicon glyphicon-file"></i> @ViewBag.Message</h4>
    </div>
</div>
<br />

<h3>Edición de un Plan de Mantenimiento</h3>

<form asp-controller="CatPlanesMantto" method="post" action="Editar">

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="container-fluid" style="padding:3px; background-color:lightblue">
        <div class="form-inline ">
            <div class="card-header">
                <div class="card-body">
                    <div class="form-group">
                        @Html.Label("Id del Plan: ", htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-1">
                            @Html.HiddenFor(model => model.planMt.Id)
                            @Html.EditorFor(model => model.planMt.Id, new { htmlAttributes = new { @class = "form-control", disabled = "true" } })
                            @Html.ValidationMessageFor(model => model.planMt.Id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="dropdown">
                            @Html.Label("Equipo: ", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-2">
                                @Html.HiddenFor(model => model.planMt.CodEquipo)
                                @Html.DropDownListFor(model => model.planMt.CodEquipo, new SelectList(Model.lstEquipos, "CodEquipo", "DescripTechnical"), "-- Seleccion un valor --", new { @class = "form-control", disabled = "true" })
                                @Html.ValidationMessageFor(model => model.planMt.CodEquipo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Sistema de Mantenimiento: ", htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-1">
                            @Html.HiddenFor(model => model.planMt.CodSistema)
                            @Html.DropDownListFor(model => model.planMt.CodSistema, new SelectList(Model.lstSisManto, "CodSistema", "Sistema"), "-- Seleccion un valor --", new { @class = "form-control", disabled = "true" })
                            @Html.ValidationMessageFor(model => model.planMt.CodSistema, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <br />

    <div class="form-horizontal">

        <div class="form-group">
            @Html.Label("Periodo: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.DropDownListFor(model => model.planMt.CodCiclo, new SelectList(Model.lstCiclos, "CodCiclo", "Descripcion"), "-- Seleccion un valor --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.planMt.CodCiclo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Frecuencia: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.planMt.Frecuencia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.planMt.Frecuencia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Activo: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class=" col-sm-offset-1 col-sm-3">
                <div class="checkbox">
                    @Html.EditorFor(model => model.planMt.Estatus)
                    @Html.ValidationMessageFor(model => model.planMt.Estatus, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Ultima Ejecución: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">

                @* @Html.TextBoxFor(model => model.planMt.FecUltEjecucion, new { @type = "date", @class = "form-control datepicker", @Value = Model.planMt.FecUltEjecucion.ToString("yyyy-MM-dd") })*@
                @Html.TextBoxFor(model => model.planMt.FecUltEjecucion, new { @class = "form-control  date-time-picker", onkeydown = "return true", onpaste = "return false" })
                @Html.ValidationMessageFor(model => model.planMt.FecUltEjecucion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Fecha de alta: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.HiddenFor(model => model.planMt.FechaAlta)

                @*@Html.TextBoxFor(model => model.planMt.FechaAlta, new { @type = "date", @class = "form-control datepicker", disabled = "true", @Value = Model.planMt.FechaAlta.ToString("yyyy-MM-dd") })*@
                @Html.TextBoxFor(model => model.planMt.FechaAlta, new { @class = "form-control  date-time-picker", onkeydown = "return true", onpaste = "return false" })
                @Html.ValidationMessageFor(model => model.planMt.FechaAlta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Agrego: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.HiddenFor(model => model.planMt.UsuarioAlta)
                @Html.EditorFor(model => model.planMt.UsuarioAlta, new { htmlAttributes = new { @class = "form-control", disabled = "true" } })
                @Html.ValidationMessageFor(model => model.planMt.UsuarioAlta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Cancelo :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.planMt.UsuarioCancelo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.planMt.UsuarioCancelo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Fecha de cancelacion: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @*@Html.TextBoxFor(model => model.planMt.FechaCancelacion, new { @type = "date", @class = "form-control datepicker", @Value = Model.planMt.FechaCancelacion.ToString("yyyy-MM-dd") })*@
                @Html.TextBoxFor(model => model.planMt.FechaCancelacion, new { @class = "form-control  date-time-picker", onkeydown = "return true", onpaste = "return false" })
                @Html.ValidationMessageFor(model => model.planMt.FechaCancelacion, "", new { @class = "text-danger" })

            </div>
        </div>

        <br />
        <div class="form-group">
            <div class="col-md-offset-2  col-md-4">
                <input type="submit" value="Guardar" class="btn btn-primary" onclick="return mostrar_procesar();" />
                @Html.ActionLink("Regresar", "CatPlanesMantto", "CatPlanesMantto", "", new { @class = "btn btn-primary", onclick = "return mostrar_procesar();" })
            </div>

        </div>
    </div>
</form>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-timepicker-addon.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(function () {
                $(".date-time-picker").datetimepicker({
                    changeMonth: true,
                    changeYear: true,
                    yearRange: "-100:+0",
                    dateFormat: 'dd/mm/yy',
                    controlType: 'select',
                    timeFormat: 'hh:mm TT',
                    oneLine: true,
                });
            });

            jQuery.validator.methods.date = function (value, element) {
                var isChrome = /Chrome/.test(navigator.userAgent) && /Google Inc/.test(navigator.vendor);
                if (isChrome) {
                    var d = new Date();
                    return this.optional(element) || !/Invalid|NaN/.test(new Date(d.toLocaleDateString(value)));
                } else {
                    return this.optional(element) || !/Invalid|NaN/.test(new Date(value));
                }
            };
        });
    </script>

}

